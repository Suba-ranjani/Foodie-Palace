@model Logindetails
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login page in HTML</title>
</head>
<style>
  
body 
{
   background-image: url('/images/color.jpg');
  background-repeat: no-repeat
}


h1{
    text-align: center;
}


form{
    width:35rem;
    margin-top:70px;
    margin-left: auto;
    margin-right: auto;
    color:whitesmoke;
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    background-color:rgb(53, 51, 51);
    border-radius: 12px;
    border: black;
    padding: 20px 25px;
}
form:hover
{
  background-color: rgba(76, 49, 40, 0.582);
}

button {
  align-content: center;
  margin:7px 160px; 
  cursor: pointer;
  border: 0;
  border-radius: 4px;
  width: 200px;
  padding: 10px 0;
  background-color:black;
  color: white;
  box-shadow: 0 0 20px rgba(14, 14, 15, 0.2);
  transition: 0.4s;
  }

button:hover {
  background-color: rgb(224, 94, 85);
  color:yellow;
  cursor: pointer;
}

.headingsContainer{
    text-align: center;
}

.headingsContainer p{
    color: gray;
}
.mainContainer{
    padding: 16px;
}
.font
{
    text-align:right;
}
input
{
    height: 40px;
    width: 250px;
    background-color: rgb(224, 94, 85) ;
    color: aliceblue;
    border-radius: 9px;
    padding: 0 10px;
    margin-top: 8px;
    font-size: 15px;
}
::placeholder
{
  color: black;
}
 #back
        {
           float:left;
           color: black;
           margin-left: 0px;
           padding: 0%;
          font-size:36px;
        }



</style>
<script>
             var message='@ViewBag.failure';
             if(message!='')
              alert(message);
           </script>
            <script>
             var message='@ViewBag.success1';
             if(message!='')
              alert(message);
           </script>
<body>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
       <a href="/Home/Index"><i class="fa fa-arrow-circle-o-left" id="back" ></i></a>
    <form method="post">
        <!-- Headings for the form -->
        <div class="headingsContainer">
            <h3>Login</h3>
        </div>
        <!-- Main container for all inputs -->
        <div class="mainContainer">
            <input asp-for="Userid" type="Username"   placeholder="Enter EmployeeId" required>  
            <br>
            <br>
             <input asp-for="SecurityKey" type="password"  placeholder="Enter Password" required>
            <br>
            <br>
            <button type="submit">Login</button>
            <br>
            <br>

            <div class="font">
            <a href="/home/Password">Change Your Password?</a>
            </div>

        </div>

    </form>
</body>
</html>
      

    